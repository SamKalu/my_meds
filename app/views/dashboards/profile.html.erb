<div class="main-container-treatment p-5">
  <div class="d-flex justify-content-between align-items-center">
    <h2 class="m-0">Profile</h2>
    <%= link_to edit_user_registration_path, class:"btn-small mx-2" do%>
      <i class="fas fa-edit"> </i> Edit
    <% end %>
  </div>
  <hr class="mb-3">
  <div class="mt-0">
    <label for="Firstname" class="mt-0">Firstname</label>
    <li class="rounded list-group-item profile-form-field">
      <%= current_user.first_name %>
    </li>
    <label for="Lastname" class="mt-4">Lastname</label>
    <li class="rounded list-group-item profile-form-field">
      <%= current_user.last_name %>
    </li>
    <label for="Bloodtype" class="mt-4">Bloodtype</label>
    <li class="rounded list-group-item profile-form-field">
      <%= current_user.blood_type %>
    </li>
    <label for="Birhtday" class="mt-4">Birhtday</label>
    <li class="rounded list-group-item profile-form-field">
      <%= current_user.birthday %>
    </li>
  </div>
</div>
