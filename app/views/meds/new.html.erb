<div class="treatment-container p-5">
  <%= link_to meds_path, class:"btn-small" do%>
    <i class="fas fa-arrow-circle-left"></i> Back
  <% end %>
  <h2 class="mt-4">Add a medication</h2>
  <%= simple_form_for(@med) do |f| %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :name %>
        <%= f.input :description %>
      </div>
      <div class="col-md-6">
        <%= f.input :stock %>
        <%= f.input :photo, as: :file %>
      </div>
    </div>
    <div class="btn-wraper d-flex justify-content-center mt-3">
      <%= button_tag(class: "primary-btn-blue pb-3 border-none") do %>
        <i class="fas fa-save mr-2"></i>Save
      <% end %>
    <% end %>
  </div>
