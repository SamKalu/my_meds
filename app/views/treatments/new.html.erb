<div class="treatment-container p-5 w-50">
  <%= link_to treatments_path, class: "btn-small" do%>
    <i class="fas fa-arrow-circle-left def-dark"></i> Back
  <% end %>
  <h2 class="mt-4 border-bottom border-muted pb-2">Create a new treatment</h2>
  <%= simple_form_for(@treatment) do |f| %>
    <%= f.input :name, label: "What is the name of the treatment?", placeholder: "Type the name here..." %>
    <%= f.submit "+ Create Treatment" , class:"primary-btn-blue border-none" %>
  <% end %>
</div>
