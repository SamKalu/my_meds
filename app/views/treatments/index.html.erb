<div class="main-container-treatment p-5">
  <div class="d-flex justify-content-between justify-content-between border-bottom border-muted align-items-center pb-2 treatment-header">
    <h1><strong>Treatments</strong></h1>
    <% if ! @treatments.empty? %>
      <%= link_to new_treatment_path, class:"btn-small wider" do %>
        <i class="fas fa-plus"></i> Create treatment
      <%end %>
    <% end %>
  </div>
  <% if @treatments.empty? %>
    <div class="mt-5 d-flex flex-column">
      <p class="text-black prompt-user">Add your first treatment</p>
      <%= link_to new_treatment_path, class:"primary-btn-blue mt-2" do %>
        <i class="fas fa-plus"></i> Add a treatment
      <% end %>
    </div>
  <% else %>
    <% @treatments.each do |treatment| %>
      <%= link_to treatment_path(treatment) do %>
        <div class="long-card p-3 my-3">
          <div class="d-flex justify-content-between align-items-center">
            <p> <%= treatment.name %> </p>
            <i class="fas fa-hand-holding-heart"></i>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
