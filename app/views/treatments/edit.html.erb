<div class="main-container-treatment p-5 w-50">
  <%= link_to treatment_path(@treatment), class:"btn-small" do %>
    <i class="fas fa-arrow-circle-left"></i> Back
  <% end %>
  <h2 class="mt-4">Update name of <%= @treatment.name %> treatment</h2>
  <hr class="mb-3">
  <%= simple_form_for(@treatment) do |f| %>
    <%= f.input :name,
                input_html: { autocomplete: "name"} %>
    <%= button_tag(class: "primary-btn-blue pb-3 border-none") do %>
      <i class="fas fa-save mr-2"></i>Change Title
    <% end %>
  <% end %>
</div>
